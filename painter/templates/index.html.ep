<!doctype html>
<html>
  <head>
    <title>Interactive Canvas</title>
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
    <script src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
    <script src="/scripts/ui.js"></script>
    <script src="/scripts/scripts.js"></script>
    <style type="text/css">
      body {
        background-color:#EEE;
      }
      #top_bar {
        background-color:#333;
        height:48px;
        padding-left:25px;
        margin:-22px;
      }
      #top_bar p {
        font-size:22px;
        color:#FFF;
        font-family:"Arial";
      }
      #title_bar {
        background-color:#FFF;
        padding-left:25px;
        padding-top:5px;
        margin:-22px;
        border:1px solid #AAA;
      }
      #title_text {
        margin-top:20px;
      }
      #inter_cav {
        font-size:30px;
        color:#333;
        font-family:"Arial";
      }
      #power {
        font-size:16px;
        color:#999;
        font-family:"Sans-serif";
        padding-left:30px;
      }
      #copy {
        font-size:14px;
        color:#666;
        font-family:"Sans-serif";
        float:right;
        margin-right:60px;
        padding:10px;
        border:1px solid #AAA;
        border-radius:4px;
      }
      #comment {
        font-size:16px;
        color:#999;
        padding-left:30px;
        margin-bottom:30px;
      }
      canvas {
        position:absolute;
        left:30px;
        top:180px;
        border:1px solid #AAA;
      }
      #canvas {
        background-color:#FFF;
      }
      #message_box {
        position:absolute;
        left:850px;
        top:180px;
        width:400px;
        height:450px;
        border:1px solid #AAA;
        overflow:scroll;
        overflow-x:hidden;
        background-color:#FFF;
      }
      #talk_area {
        position:absolute;
        left:850px;
        top:640px;
        width:396px;
        height:100px;
        border:1px solid #AAA;
        overflow:scroll;
        overflow-x:hidden;
      }
      #send_button {
        position:absolute;
        left:850px;
        top:750px;
      }
      .inline {
        display:inline;
      }
      #tools {
        position:absolute;
        left:40px;
        top:140px;
      }
      #tools li {
        float:left;
        padding-left:10px;
        padding-right:10px;
      }
      .tool_icon {
        width:24px;
        height:24px;
      }
    </style>
  </head>
  <body>
    <div id="top_bar">
      <p>&nbsp;</p>
    </div>
    <div id="title_bar">
      <div id="title_text">
        <p id="inter_cav" class="inline">Interactive Canvas</p>
        <p id="power" class="inline">Powered by Mojolicious</p>
        <div id="copy_div" class="inline">
          <p id="copy">Save As</p>
        </div>
        <p id="comment">A demo of the exciting features of HTML5 canvas and WebSocket.</p>
      </div>
    </div>
    <div id="tool_bar">
      <ul id="tools">
        <li id="tool_pen">Pen</li>
        <li id="tool_line">Line</li>
        <li id="tool_rect">Rect</li>
        <li id="tool_ellipse">Ellipse</li>
        <li id="tool_eraser">Eraser</li>
        <li id="tool_undo">Undo</li>
        <li id="tool_redo">Redo</li>
        <li id="tool_fg">Foreground</li>
        <li id="tool_bg">Background</li>
        <li id="tool_width">Width</li>
        <li id="tool_fill">Fill</li>
      </ul>
    </div>
    <div id="canvas_container">
      <canvas id="canvas" width="800" height="600"></canvas>
      <canvas id="detector" width="800" height="600"></canvas>
    </div>
    <div id="message_box"></div>
    <textarea id="talk_area"></textarea>
    <div id="name_dialog">
      <p>Enter your name</p>
      <input id="name_input" type="text"/>
    </div>
  </body>
</html>
